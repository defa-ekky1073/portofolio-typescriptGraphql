{
  "name": "portofolio-project",
  "version": "1.0.2",
  "description": "",
  "main": "dist/server.js",
  "bin": "dist/server.js",
  "scripts": {
    "clean": "rimraf ./dist && rimraf ./bin",
    "copy": "cpx \"src/*views/*\" dist && cpx \"src/*assets/*\" dist",
    "prebuild": "npm run clean",
    "build": "npm run lint && npm run build-ts",
    "postbuild": "npm run copy",
    "unit-test": "nyc --reporter=text-summary --reporter=text --reporter=html mocha dist/unitTest --reporter mochawesome --exit",
    "predebug": "npm run build",
    "debug": "node ./dist/server.js debug | bunyan -o short",
    "prestart": "npm run build",
    "start": "nodemon ./dist/server.js | bunyan -o short  ",
    "predev": "npm run clean",
    "dev": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Nodemon\" -c \"blue.bold,magenta.bold\" \"npm run watch-ts\" \"nodemon ./dist/server.js\"",
    "prenodemon": "wait-on dist/server.js",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "test:build": "tsc -p test/tsconfig.json",
    "test:dev": "tsc -w -p test/tsconfig.json",
    "test": "nyc --reporter=text-summary --reporter=text --reporter=html mocha test/build/index.js --reporter mochawesome --exit",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "binary": "pkg . --target latest-linux-x64 --out-path ./bin",
    "binary-dev": "pkg . --out-path ./bin",
    "docs": "typedoc --name \"Portofolio API\" --readme README.md --target ES5 --out public src"
  },
  "pkg": {
    "scripts": "dist/**/*.js",
    "targets": [
      "node8"
    ]
  },
  "author": "Ekky Defa Rizkyan <ekky@lussa.net>",
  "license": "ISC",
  "repository": "https://github.com/defa-ekky1073/portofolio-typescriptGraphql.git",
  "dependencies": {
    "apollo-link": "^1.0.7",
    "apollo-server-express": "^1.3.2",
    "body-parser": "^1.18.2",
    "bunyan": "^1.8.12",
    "concurrently": "^3.5.1",
    "cors": "^2.8.4",
    "cpx": "^1.5.0",
    "crypto-js": "^3.1.9-1",
    "ejs": "^2.5.7",
    "express": "^4.16.2",
    "express-jwt": "^5.3.1",
    "graphql": "^0.11.7",
    "graphql-subscriptions": "^0.5.6",
    "graphql-tools": "^2.24.0",
    "join-monster": "^2.1.0",
    "join-monster-graphql-tools-adapter": "0.0.2",
    "jsonwebtoken": "^8.4.0",
    "merge-graphql-schemas": "^1.4.0",
    "moment": "^2.22.2",
    "mysql": "^2.15.0",
    "mysql2": "^1.6.5",
    "node-fetch": "^2.3.0",
    "pg": "^7.8.0",
    "pg-hstore": "^2.3.2",
    "request": "^2.88.0",
    "sequelize": "^4.28.6",
    "sequelize-mysql": "^1.7.0",
    "subscriptions-transport-ws": "^0.9.4",
    "ts-node": "^3.0.4",
    "tslint": "^5.8.0",
    "typescript": "^2.6.2",
    "wait-on": "^2.0.0"
  },
  "devDependencies": {
    "@types/bunyan": "^1.8.5",
    "@types/graphql": "^0.11.8",
    "@types/mocha": "^5.2.5",
    "chai": "^4.2.0",
    "mocha": "^5.2.0",
    "mochawesome": "^3.1.1",
    "nodemon": "^1.18.10",
    "nyc": "^13.3.0",
    "pkg": "^4.3.7",
    "rimraf": "^2.6.2",
    "supertest": "^3.3.0",
    "typedoc": "^0.13.0"
  }
}
